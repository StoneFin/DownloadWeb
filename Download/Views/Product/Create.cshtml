@model Download.Models.ProductCreateView
@using Download.Models

@{
    ViewBag.Title = "Create";
    var per = (IEnumerable<SelectListItem>)ViewData["permissions"];


}

<h2>Create Product</h2>

<div style="background-color: rgba(255, 255, 255, 0.23)">
    @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()



            <hr />
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.Label("Product Name", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProductName)
                    @Html.ValidationMessageFor(model => model.ProductName)<br /><br />
                </div>
            </div>

        <div class="form-group">
            @Html.Label("","Select a .exe" , new  { @class = "control-label col-md-2"})
            <fieldset>
                <div class=" col-md-10">

                    <p>
                    <input type="file" name="FileUpload1" />
                    </p>
                </div>
            </fieldset>
        </div>

        <div class="form-group">
            @Html.Label("Select an Installer", new { @class = "control-label col-md-2" })
            <fieldset>
                <div class=" col-md-10">

                    <p>
                       <input type="file" name="FileUpload2" />
                    </p>
                </div>
            </fieldset>

        </div>

        <div class="form-group">
            @Html.Label("Select a ReadMe", new { @class = "control-label col-md-2" })
            <fieldset>
                <div class=" col-md-10">

                    <p>
                       <input type="file" name="FileUpload3" />
                    </p>
                </div>
            </fieldset>
        </div>
        <div class="form-group">
            @Html.Label("Version Permissions", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("VStatus", per)
                @Html.ValidationMessageFor(model => model.VersionStatus)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <br />
                <input type="submit" value="Create" class="btn btn-default" /><br />

            </div>
           <hr />

        </div>
                     @Html.ActionLink("Back to List", "Index") <br />
    }
    </div>

@*Another Default thing*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
