@model IEnumerable<Download.Models.Product>
@using Download.Models

@{
    ViewBag.Title = "Index";

}

<div style="background-color: #4f51d0; border: 2px solid #ffffff; padding-left: 2em" class="text-white">
    <h2>Welcome to Stonefin Tech Downloads!</h2>
    @if (User.IsInRole("admin") == true || User.IsInRole("member") == true)
    {
        @*
            Don't display teaser becuase members and admins have full access to 
            downloadable stuff
        *@
    }
    else if (User.IsInRole("non-validated memeber"))
    {
           <div class="body-content; text-muted" style="font-size: 20px">
        Your account is currently in the process of being verified.
    </div> 
    }
    else { 
    <div class="body-content; text-muted" style="font-size: 20px">
        Log in and get verified to gain access to
        even more awesome downloadable stuff!
    </div>
    }
    <br />
    <div class="body-content; text-muted" style="font-size: 20px">
        Use the search to find the product you want, or
        do a blank search to browse through all available
        products
    </div>
    <br />
</div>
<br />
<div>
    @Html.Partial("_SearchPartial")
</div>