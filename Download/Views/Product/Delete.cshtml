@model Download.Models.Product

@{
    ViewBag.Title = "Delete";
}
<h2>Delete</h2>
<div style="background-color: rgba(255, 255, 255, 0.30)">
    <h3>Are you sure you want to delete @Model.ProductName?</h3>
    <hr />
    <h4>This will Delete the item perminately, if you wish to get rid of this product without perminately deleteing it, use the remove button</h4>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
