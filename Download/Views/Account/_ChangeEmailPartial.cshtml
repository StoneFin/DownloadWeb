
@using Microsoft.AspNet.Identity
@model Download.Models.ManageUserViewModel


@{
    string email = Model.Email;
}

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4 style="margin-bottom: 0px;">Change Email</h4>
    <hr style="margin-top: 0px;"/>
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBox("Email", email, new { @style = "text-align: left; width: 300px", @class = "col-md-2 control-label" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change Email" class="btn btn-default" />
        </div>
    </div>
}

